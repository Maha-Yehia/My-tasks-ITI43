@model IEnumerable<Task_Day09.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-active table-group-divider">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-outline-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-outline-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
